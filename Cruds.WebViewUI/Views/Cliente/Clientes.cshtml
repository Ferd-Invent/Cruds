@model IEnumerable<Cruds.Domain.Cliente>

@{
    ViewData["Title"] = "Home Page";
}
<link href="~/lib~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="card position-fixed" style="width: 63rem;">
  
<div class="card-body">
    
    <h5 class="card-title" style="margin-bottom:15px;">Clientes</h5>
    <table class="table table-striped table-hover" style="border-collapse">
        <tr>
           <th>@Html.DisplayNameFor(model => model.Codigo)</th> 
           <th>@Html.DisplayNameFor(model => model.Nome)</th> 
           <th>@Html.DisplayNameFor(model => model.Cpf)</th> 
           <th>@Html.DisplayNameFor(model => model.DataDeNascimento)</th> 
           <th>@Html.DisplayNameFor(model => model.Email)</th> 
           <th>@Html.DisplayNameFor(model => model.RendaMensal)</th> 
           <th class="text-center"> Ações</th>
           </tr> 
                @foreach (var a in Model)
                {
                 <tr>
                     <td>@Html.DisplayFor(modelItem => a.Codigo)</td>
                     <td>@Html.DisplayFor(modelItem => a.Nome)</td>
                     <td>@Html.DisplayFor(modelItem => a.Cpf)</td>
                     <td>@Html.DisplayFor(modelItem => a.DataDeNascimento)</td>
                     <td>@Html.DisplayFor(modelItem => a.Email)</td>
                     <td>@Html.DisplayFor(modelItem => a.RendaMensal)</td>
                  <td>
                <a asp-action="Create" asp-route-id="@a.Codigo">Editar</a> |
                <a asp-action="Details" asp-route-id="@a.Codigo">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@a.Codigo">Remover</a>
                </td>
                 </tr>
                  

                }
         </table>
   

    <button class="btn btn-primary" asp-area="" asp-controller="Home"  asp-action="Index" > Ok </button>
    <button class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Index"> Cancelar</button>
    <a class="btn btn-primary" style="margin-left:43rem;" asp-controller="Cliente" asp-action="Create"> Adicionar </a>
  
  </div>
</div>
